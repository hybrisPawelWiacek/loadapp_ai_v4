# LoadApp.AI Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment Settings
ENV=development  # Options: development, testing, staging, production

# Database Settings
DATABASE_URL=sqlite:///app.db
SQL_ECHO=false
TRACK_MODIFICATIONS=false

# Service Settings
BACKEND_HOST=localhost
BACKEND_PORT=5001  # Do not use 5000 (conflicts with Apple AirTunes)
FRONTEND_PORT=8501
DEBUG_MODE=true
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# OpenAI API Settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY=1.0
OPENAI_TIMEOUT=30.0

# Additional Settings
# Uncomment and configure these as needed:

# Feature Flags
# ENABLE_FEATURE_X=false
# ENABLE_FEATURE_Y=false

# Security Settings
# JWT_SECRET_KEY=your_jwt_secret_here
# JWT_ACCESS_TOKEN_EXPIRES=3600

# Cache Settings
# CACHE_TYPE=simple
# CACHE_DEFAULT_TIMEOUT=300

# Note: Never commit the actual .env file to version control
# Keep this template updated with all required environment variables
