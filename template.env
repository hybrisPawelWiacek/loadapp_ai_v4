# LoadApp.AI Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment Settings
ENV=development  # Options: development, testing, staging, production

# Server Configuration
HOST=localhost
PORT=5001  # Do not use 5000 (conflicts with Apple AirTunes)
DEBUG=true

# Database Settings
DATABASE_URL=sqlite:///backend/database/loadapp.db
SQL_ECHO=false
TRACK_MODIFICATIONS=false

# OpenAI API Settings
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY=1.0
OPENAI_TIMEOUT=30.0

# Google Maps API Settings
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
GMAPS_MAX_RETRIES=3
GMAPS_RETRY_DELAY=1.0
GMAPS_TIMEOUT=30.0
GMAPS_CACHE_TTL=3600

# Toll Rate API Settings
TOLL_RATE_API_KEY=your-google-maps-api-key-here  # Uses the same Google Maps API key
TOLL_RATE_MAX_RETRIES=3
TOLL_RATE_RETRY_DELAY=1.0
TOLL_RATE_TIMEOUT=30.0

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Frontend Settings
FRONTEND_PORT=8501

# Additional Settings (Uncomment as needed)
# Feature Flags
# ENABLE_FEATURE_X=false
# ENABLE_FEATURE_Y=false

# Security Settings
# JWT_SECRET_KEY=your_jwt_secret_here
# JWT_ACCESS_TOKEN_EXPIRES=3600

# Cache Settings
# CACHE_TYPE=simple
# CACHE_DEFAULT_TIMEOUT=300

# Note: Never commit the actual .env file to version control
